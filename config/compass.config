# Compass Configuration

# HTTP paths
http_path             = '/'
http_stylesheets_path = '/nestabp-theme/css'
http_images_path      = '/nestabp-theme/img'
http_javascripts_path = '/nestabp-theme/js'

# File system locations
sass_dir              = 'themes/nestabp-theme/scss'
css_dir               = 'themes/nestabp-theme/public/nestabp-theme/css'
images_dir            = 'themes/nestabp-theme/public/nestabp-theme/img'
javascripts_dir       = 'themes/nestabp-theme/public/nestabp-theme/js'

# Set to true for easier debugging
line_comments         = false

# CSS output style - :nested, :expanded, :compact, or :compressed
output_style          = :expanded

# Preferred Syntax, either :scss or :sass
preferred_syntax      = :scss

# Determine whether Compass asset helper functions generate relative
# or absolute paths
relative_assets       = true

# Learn more: http://compass-style.org/docs/tutorials/configuration-reference/